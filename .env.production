# Profile Service - Production Environment
NODE_ENV=production
PORT=4002

# Database - Use production PostgreSQL URL (will be provided via environment variables)
DATABASE_URL=${DATABASE_URL}

# JWT verification - Production auth service
AUTH_JWKS_URL=https://authaws-production.up.railway.app/.well-known/jwks.json
AUTH_JWT_ISSUER=nexus  -auth
AUTH_JWT_AUDIENCE=nexus
AUTH_SERVICE_URL=https://authaws-production.up.railway.app

# Network service integration - Production URLs
NETWORK_SERVICE_URL=${NETWORK_SERVICE_URL:-http://localhost:4005}
BADGE_AUTO_POST_ENABLED=true

# Redis - Production Redis URL (will be provided via environment variables)
REDIS_URL=${REDIS_URL}
REDIS_DISABLED=false

# System authentication for inter-service communication
SYSTEM_SECRET=${SYSTEM_SECRET}
SYSTEM_JWT_SECRET=${SYSTEM_JWT_SECRET}

# Performance optimizations for production
NODE_OPTIONS=--max-old-space-size=1536
